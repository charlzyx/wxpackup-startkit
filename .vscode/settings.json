{
  // ---- wxml 格式化相关设置
  "minapp-vscode.wxmlFormatter": "jsBeautifyHtml",
  "minapp-vscode.jsBeautifyHtml": {
    "content_unformatted": "text",
    "wrap_attributes": "force-expand-multiline",
    "indent_size": 2,
    "wrap_attributes_indent_size": 2,
    "void_elements": "image,input,video",
    "indent_scripts": "keep"
  },
  "[wxml]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "qiu8310.minapp-vscode"
  },
  "editor.rulers": [
    80,
  ],
  // ---- ts, js, json, less 自动格式化
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rome.rome"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rome.rome"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rome.rome"
  },
  "[less]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "stylelint.vscode-stylelint"
  },
  // 折叠文件树中的配置文件
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": "yarn.lock, yarn-error.log, .npmrc, .gitignore",
    ".editorconfig": "rome.json, .stylelintrc.js",
    "project.config.json": "wxpackup.config.js, project.private.config.json, tsconfig.json"
  }
}
